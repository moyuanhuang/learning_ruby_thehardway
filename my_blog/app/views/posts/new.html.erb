<div id="page_wrapper">
  <h1> New post</h1>

  <%= form_for :post, url: posts_path do |f| %>
    <p>
      <!-- This will yield parameter after submit as params[post][title]  -->
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
